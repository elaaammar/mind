{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_errors(form) }}
    
    <div class="row">
        <div class="col-md-12">
            <div class="form-group mb-3">
                {{ form_label(form.title, 'Titre du Rapport', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Titre du rapport...'}}) }}
                {{ form_errors(form.title) }}
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group mb-3">
                {{ form_label(form.type, 'Type d\'Audit', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.type, {'attr': {'class': 'form-control', 'placeholder': 'Type...'}}) }}
                {{ form_errors(form.type) }}
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group mb-3">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5, 'placeholder': 'Description détaillée...'}}) }}
                {{ form_errors(form.description) }}
            </div>
        </div>
    </div>

    {# Hidden fields with defaults handled by controller or pre-set #}
    <div class="d-none">
        {{ form_row(form.status) }}
        {{ form_row(form.priority) }}
        {{ form_row(form.score) }}
        {{ form_row(form.validationDate) }}
    </div>

    <div class="mt-4">
        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
        <a href="{{ path('app_user_report_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
{{ form_end(form) }}
