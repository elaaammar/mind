{% extends 'base.html.twig' %}

{% block title %}Détails rôle - MindAudit{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-shield-alt me-2"></i>Détails du rôle</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="{{ path('app_role_edit', {'id': role.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i>Modifier
            </a>
            <a href="{{ path('app_role_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Retour
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0">Informations du rôle</h5>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <th width="200">ID</th>
                            <td>{{ role.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td><strong>{{ role.nom }}</strong></td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ role.description|default('Aucune description') }}</td>
                        </tr>
                        <tr>
                            <th>Nombre d'utilisateurs</th>
                            <td>
                                <span class="badge bg-primary">{{ role.utilisateurs|length }}</span>
                            </td>
                        </tr>
                        <tr>
                            <th>Date de création</th>
                            <td>{{ role.createdAt ? role.createdAt|date('d/m/Y à H:i') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header bg-white">
                <h5 class="mb-0">Permissions</h5>
            </div>
            <div class="card-body">
                {% if role.permissions %}
                    <div class="row">
                        {% for permission in role.permissions %}
                            <div class="col-md-6 mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>{{ permission }}
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-muted mb-0">Aucune permission définie</p>
                {% endif %}
            </div>
        </div>

        {% if role.utilisateurs|length > 0 %}
        <div class="card mt-4">
            <div class="card-header bg-white">
                <h5 class="mb-0">Utilisateurs ayant ce rôle</h5>
            </div>
            <div class="card-body">
                <div class="list-group">
                    {% for utilisateur in role.utilisateurs %}
                        <a href="{{ path('app_utilisateur_show', {'id': utilisateur.id}) }}" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">{{ utilisateur.nomComplet }}</h6>
                                {% if utilisateur.actif %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-danger">Inactif</span>
                                {% endif %}
                            </div>
                            <small class="text-muted">{{ utilisateur.email }}</small>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endif %}
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0">Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('app_role_edit', {'id': role.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Modifier
                    </a>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="fas fa-trash me-2"></i>Supprimer
                    </button>
                </div>
            </div>
        </div>

        <div class="card mt-3 bg-light">
            <div class="card-body">
                <h6 class="card-title"><i class="fas fa-chart-bar me-2"></i>Statistiques</h6>
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="fas fa-users text-primary me-2"></i>
                        {{ role.utilisateurs|length }} utilisateur(s)
                    </li>
                    <li>
                        <i class="fas fa-key text-success me-2"></i>
                        {{ role.permissions|length }} permission(s)
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmation de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Êtes-vous sûr de vouloir supprimer le rôle <strong>{{ role.nom }}</strong> ?
                {% if role.utilisateurs|length > 0 %}
                    <div class="alert alert-warning mt-2">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Ce rôle est attribué à {{ role.utilisateurs|length }} utilisateur(s).
                    </div>
                {% endif %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                {{ include('role/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
