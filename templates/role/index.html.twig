{% extends 'base.html.twig' %}

{% block title %}Liste des rôles - MindAudit{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-user-shield me-2"></i>Gestion des Rôles</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('app_role_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Nouveau rôle
        </a>
    </div>
</div>

<!-- Formulaire de recherche -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-8">
                <input type="text" name="search" class="form-control" placeholder="Rechercher par nom ou description..." value="{{ search }}">
            </div>
            <div class="col-md-2">
                <select name="sort" class="form-select">
                    <option value="nom" {% if sortBy == 'nom' %}selected{% endif %}>Nom</option>
                    <option value="createdAt" {% if sortBy == 'createdAt' %}selected{% endif %}>Date création</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search me-1"></i>Rechercher
                </button>
            </div>
        </form>
    </div>
</div>

<div class="row g-4">
    {% for role in roles %}
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-shield-alt text-primary me-2"></i>{{ role.nom }}
                </h5>
                <span class="badge bg-primary">{{ role.utilisateurs|length }} utilisateur(s)</span>
            </div>
            <div class="card-body">
                <p class="card-text text-muted">
                    {{ role.description|default('Aucune description') }}
                </p>
                
                {% if role.permissions %}
                <div class="mb-3">
                    <h6 class="text-muted mb-2">Permissions :</h6>
                    <div class="d-flex flex-wrap gap-1">
                        {% for permission in role.permissions|slice(0, 5) %}
                            <span class="badge bg-secondary">{{ permission }}</span>
                        {% endfor %}
                        {% if role.permissions|length > 5 %}
                            <span class="badge bg-info">+{{ role.permissions|length - 5 }} autres</span>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
                
                <small class="text-muted">
                    <i class="fas fa-calendar me-1"></i>Créé le {{ role.createdAt ? role.createdAt|date('d/m/Y') : '' }}
                </small>
            </div>
            <div class="card-footer bg-white">
                <div class="btn-group w-100" role="group">
                    <a href="{{ path('app_role_show', {'id': role.id}) }}" class="btn btn-sm btn-info">
                        <i class="fas fa-eye me-1"></i>Voir
                    </a>
                    <a href="{{ path('app_role_edit', {'id': role.id}) }}" class="btn btn-sm btn-warning">
                        <i class="fas fa-edit me-1"></i>Modifier
                    </a>
                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ role.id }}">
                        <i class="fas fa-trash me-1"></i>Supprimer
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de confirmation de suppression -->
    <div class="modal fade" id="deleteModal{{ role.id }}" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmer la suppression</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Êtes-vous sûr de vouloir supprimer le rôle <strong>{{ role.nom }}</strong> ?
                    {% if role.utilisateurs|length > 0 %}
                        <div class="alert alert-warning mt-2">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Ce rôle est attribué à {{ role.utilisateurs|length }} utilisateur(s).
                        </div>
                    {% endif %}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <form method="post" action="{{ path('app_role_delete', {'id': role.id}) }}" style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ role.id) }}">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {% else %}
    <div class="col-12">
        <div class="card">
            <div class="card-body text-center text-muted py-5">
                <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                <p class="mb-0">Aucun rôle trouvé</p>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
