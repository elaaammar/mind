{% for reponse_reclamation in pagination %}
<tr class="admin-table-row">
    <td><span class="text-xs font-weight-bold text-secondary">#{{ reponse_reclamation.id }}</span></td>
    <td>
        {% if reponse_reclamation.reclamation %}
            <div class="font-weight-bold">
                <a href="{{ path('app_reclamation_show', { id: reponse_reclamation.reclamation.id }) }}" class="text-primary decoration-none">
                    #{{ reponse_reclamation.reclamation.id }} - {{ reponse_reclamation.reclamation.titre|u.truncate(30) }}
                </a>
            </div>
            <div class="text-xs text-secondary">Relatif à la réclamation</div>
        {% else %}
            <span class="text-muted">—</span>
        {% endif %}
    </td>
    <td>
        <div class="text-dark">{{ reponse_reclamation.contenu|u.truncate(60) }}</div>
    </td>
    <td>
        <div class="font-weight-bold">{{ reponse_reclamation.nom }}</div>
        <div class="badge badge-light border text-xs">{{ reponse_reclamation.auteurType|default('Utilisateur') }}</div>
    </td>
    <td>
        <div class="text-xs"><i class="far fa-calendar-alt mr-1"></i> {{ reponse_reclamation.dateCreation ? reponse_reclamation.dateCreation|date('d M Y') : '' }}</div>
        <div class="text-xs text-secondary">{{ reponse_reclamation.dateCreation ? reponse_reclamation.dateCreation|date('H:i') : '' }}</div>
    </td>
    <td class="text-right">
        <div class="btn-group">
            <a href="{{ path('app_reponse_reclamation_show', { id: reponse_reclamation.id }) }}" class="btn btn-sm btn-light" title="Voir"><i class="fas fa-eye text-primary"></i></a>
            <a href="{{ path('app_reponse_reclamation_edit', { id: reponse_reclamation.id }) }}" class="btn btn-sm btn-light" title="Modifier"><i class="fas fa-edit text-info"></i></a>
            <form method="post" action="{{ path('app_reponse_reclamation_delete', { id: reponse_reclamation.id }) }}" style="display:inline-block;" onsubmit="return confirm('Êtes-vous sûr ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reponse_reclamation.id) }}">
                <button class="btn btn-sm btn-light" title="Supprimer"><i class="fas fa-trash-alt text-danger"></i></button>
            </form>
        </div>
    </td>
</tr>
{% else %}
<tr><td colspan="6" class="text-center text-muted py-5">Aucune réponse trouvée.</td></tr>
{% endfor %}
