{# Generic modal for add/edit form. Content (form) is loaded via AJAX into modal-form-content. #}
<div class="modal fade" id="entityFormModal" tabindex="-1" role="dialog" aria-labelledby="entityFormModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title" id="entityFormModalLabel">Chargement...</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fermer"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body" id="entityFormModalContent">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status"><span class="sr-only">Chargement...</span></div>
                </div>
            </div>
        </div>
    </div>
</div>
