{% extends 'base.html.twig' %}

{% block title %}Modifier Réclamation #{{ reclamation.id }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-edit text-primary mr-2"></i>
            Modifier Réclamation #{{ reclamation.id }}
        </h1>
        <div class="btn-group">
            <a href="{{ path('app_reclamation_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left mr-1"></i> Retour
            </a>
            <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}" class="btn btn-outline-info">
                <i class="fas fa-eye mr-1"></i> Voir
            </a>
        </div>
    </div>

    <!-- Form Card -->
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-gradient-info text-white py-3">
                    <h5 class="mb-0"><i class="fas fa-file-alt mr-2"></i>Modifier les informations</h5>
                </div>
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'class': 'modern-form', 'novalidate': 'novalidate'}}) }}
                    
                    {% if form.vars.errors|length %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle mr-2"></i>
                            <strong>Erreurs de validation:</strong>
                            {{ form_errors(form) }}
                            <button type="button" class="close" data-dismiss="alert">
                                <span>&times;</span>
                            </button>
                        </div>
                    {% endif %}

                    <div class="row">
                        <!-- Titre -->
                        <div class="col-md-8 mb-4">
                            <div class="form-group">
                                {{ form_label(form.titre, null, {'label_attr': {'class': 'font-weight-bold text-dark'}}) }}
                                {{ form_widget(form.titre, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.titre) }}
                                </div>
                            </div>
                        </div>

                        <!-- Catégorie -->
                        <div class="col-md-4 mb-4">
                            <div class="form-group">
                                {{ form_label(form.categorie, null, {'label_attr': {'class': 'font-weight-bold text-dark'}}) }}
                                {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.categorie) }}
                                </div>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="col-12 mb-4">
                            <div class="form-group">
                                {{ form_label(form.description, null, {'label_attr': {'class': 'font-weight-bold text-dark'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle mr-1"></i>Minimum 10 caractères
                                </small>
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.description) }}
                                </div>
                            </div>
                        </div>

                        <!-- Statut -->
                        <div class="col-md-6 mb-4">
                            <div class="form-group">
                                {{ form_label(form.statut, null, {'label_attr': {'class': 'font-weight-bold text-dark'}}) }}
                                {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.statut) }}
                                </div>
                            </div>
                        </div>

                        <!-- Priorité -->
                        <div class="col-md-6 mb-4">
                            <div class="form-group">
                                {{ form_label(form.priorite, null, {'label_attr': {'class': 'font-weight-bold text-dark'}}) }}
                                {{ form_widget(form.priorite, {'attr': {'class': 'form-control'}}) }}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.priorite) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">
                    <h6 class="text-dark font-weight-bold mb-3">
                        <i class="fas fa-user-circle text-primary mr-2"></i>Informations de contact
                    </h6>

                    <div class="row">
                        <!-- Nom -->
                        <div class="col-md-6 mb-4">
                            <div class="form-group">
                                {{ form_label(form.nom, null, {'label_attr': {'class': 'font-weight-bold text-dark'}}) }}
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.nom) }}
                                </div>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="col-md-6 mb-4">
                            <div class="form-group">
                                {{ form_label(form.email, null, {'label_attr': {'class': 'font-weight-bold text-dark'}}) }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>
                        </div>

                        <!-- Téléphone -->
                        <div class="col-12 mb-4">
                            <div class="form-group">
                                {{ form_label(form.telephone, null, {'label_attr': {'class': 'font-weight-bold text-dark'}}) }}
                                {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                                <div class="invalid-feedback d-block">
                                    {{ form_errors(form.telephone) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                        <div>
                            <a href="{{ path('app_reclamation_index') }}" class="btn btn-light btn-lg mr-2">
                                <i class="fas fa-times mr-1"></i> Annuler
                            </a>
                        
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg px-5">
                            <i class="fas fa-save mr-2"></i> Enregistrer les modifications
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
