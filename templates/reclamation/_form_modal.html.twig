<div class="modal-form-content p-4" data-modal-title="{{ modal_title }}">
    {{ form_start(form, {'attr': {'class': 'modern-form', 'novalidate': 'novalidate'}}) }}
        {% if form.vars.errors|length %}
            <div class="alert alert-danger">{{ form_errors(form) }}</div>
        {% endif %}
        <div class="row">
            <div class="col-md-8 mb-4">
                {{ form_row(form.titre, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-4 mb-4">
                {{ form_row(form.categorie, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-12 mb-4">
                {{ form_row(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
            </div>
            <div class="col-md-6 mb-4">
                {{ form_row(form.statut, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-6 mb-4">
                {{ form_row(form.priorite, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-6 mb-4">
                {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-6 mb-4">
                {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-12 mb-4">
                {{ form_row(form.telephone, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="modal-footer px-0 pb-0 shadow-none border-0">
            <button type="button" class="btn btn-light" data-dismiss="modal">Annuler</button>
            <button type="submit" class="btn btn-primary ml-2">
                <i class="fas fa-check-circle mr-1"></i> Enregistrer la r√©clamation
            </button>
        </div>
    {{ form_end(form) }}
</div>
