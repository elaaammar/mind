<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>MindAudit - Inscription</title>

    <!-- Custom fonts for this template-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Custom styles for this template-->
    <link href="/css/auth.css" rel="stylesheet">
</head>

<body class="bg-gradient-primary" data-turbo="false">
    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Créer un compte !</h1>
                            </div>

                            {% for message in app.flashes('error') %}
                                <div class="alert alert-danger">{{ message }}</div>
                            {% endfor %}

                            {{ form_start(registrationForm, {'attr': {'class': 'user'}}) }}
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_widget(registrationForm.prenom, {
                                            'attr': {
                                                'class': 'form-control form-control-user' ~ (registrationForm.prenom.vars.errors|length > 0 ? ' is-invalid' : ''),
                                                'placeholder': 'Prénom'
                                            }
                                        }) }}
                                        {% if registrationForm.prenom.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {% for error in registrationForm.prenom.vars.errors %}
                                                    {{ error.message }}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_widget(registrationForm.nom, {
                                            'attr': {
                                                'class': 'form-control form-control-user' ~ (registrationForm.nom.vars.errors|length > 0 ? ' is-invalid' : ''),
                                                'placeholder': 'Nom'
                                            }
                                        }) }}
                                        {% if registrationForm.nom.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {% for error in registrationForm.nom.vars.errors %}
                                                    {{ error.message }}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_widget(registrationForm.email, {
                                        'attr': {
                                            'class': 'form-control form-control-user' ~ (registrationForm.email.vars.errors|length > 0 ? ' is-invalid' : ''),
                                            'placeholder': 'Adresse Email'
                                        }
                                    }) }}
                                    {% if registrationForm.email.vars.errors|length > 0 %}
                                        <div class="invalid-feedback">
                                            {% for error in registrationForm.email.vars.errors %}
                                                {{ error.message }}
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_widget(registrationForm.password, {
                                            'attr': {
                                                'class': 'form-control form-control-user' ~ (registrationForm.password.vars.errors|length > 0 ? ' is-invalid' : ''),
                                                'placeholder': 'Mot de passe',
                                                'id': 'password'
                                            }
                                        }) }}
                                        {% if registrationForm.password.vars.errors|length > 0 %}
                                            <div class="invalid-feedback">
                                                {% for error in registrationForm.password.vars.errors %}
                                                    {{ error.message }}
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" 
                                               class="form-control form-control-user" 
                                               id="confirmPassword"
                                               placeholder="Confirmer le mot de passe"
                                               required>
                                        <div class="invalid-feedback" id="confirmPasswordError" style="display: none;">
                                            Les mots de passe ne correspondent pas
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Créer le compte
                                </button>
                            {{ form_end(registrationForm) }}

                            <hr>
                            <div class="text-center mb-3">
                                <p class="text-muted small">Ou inscrivez-vous avec</p>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <a href="{{ path('connect_google') }}" class="btn btn-danger btn-user btn-block">
                                        <i class="fab fa-google fa-fw"></i> Google
                                    </a>
                                </div>
                                <div class="col-6">
                                    <a href="{{ path('connect_facebook') }}" class="btn btn-primary btn-user btn-block" style="background-color: #3b5998;">
                                        <i class="fab fa-facebook-f fa-fw"></i> Facebook
                                    </a>
                                </div>
                            </div>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="#" onclick="alert('Fonctionnalité à venir')">Mot de passe oublié ?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="{{ path('app_login') }}">Vous avez déjà un compte ? Connectez-vous !</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.0/js/bootstrap.bundle.min.js"></script>

    <script>
        // Validation du mot de passe
        document.addEventListener('DOMContentLoaded', function() {
            const passwordField = document.getElementById('password');
            const confirmPasswordField = document.getElementById('confirmPassword');
            const confirmPasswordError = document.getElementById('confirmPasswordError');
            const submitButton = document.querySelector('button[type="submit"]');

            // Vérifier que tous les éléments existent
            if (!passwordField || !confirmPasswordField || !confirmPasswordError || !submitButton) {
                console.warn('Certains éléments du formulaire sont manquants');
                return;
            }

            function validatePasswords() {
                const password = passwordField.value;
                const confirmPassword = confirmPasswordField.value;
                
                if (confirmPassword && password !== confirmPassword) {
                    confirmPasswordField.classList.add('is-invalid');
                    confirmPasswordError.style.display = 'block';
                    submitButton.disabled = true;
                    return false;
                } else {
                    confirmPasswordField.classList.remove('is-invalid');
                    confirmPasswordError.style.display = 'none';
                    submitButton.disabled = false;
                    return true;
                }
            }

            confirmPasswordField.addEventListener('input', validatePasswords);
            passwordField.addEventListener('input', validatePasswords);

            // Validation avant soumission
            document.querySelector('form').addEventListener('submit', function(e) {
                if (!validatePasswords()) {
                    e.preventDefault();
                    return false;
                }
            });
        });
    </script>
</body>
</html>