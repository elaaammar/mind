{% extends 'base.html.twig' %}

{% block title %}{{ 'report.details'|trans }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">{{ 'report.details'|trans }} #{{ report.id }}</h1>

        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">{{ report.title }}</h6>
                <div>
                     {% if report.status == 'Valid√©' %}
                        <span class="badge badge-success">{{ report.status }}</span>
                    {% elseif report.status == 'En cours' %}
                        <span class="badge badge-primary">{{ report.status }}</span>
                    {% elseif report.status == 'Critique' %}
                        <span class="badge badge-danger">{{ report.status }}</span>
                    {% else %}
                        <span class="badge badge-secondary">{{ report.status }}</span>
                    {% endif %}
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>{{ 'report.type'|trans }}:</strong> {{ report.type }}</p>
                        <p><strong>{{ 'report.priority'|trans }}:</strong> {{ report.priority|default('report.not_defined'|trans) }}</p>
                        <p><strong>{{ 'report.score'|trans }}:</strong> {{ report.score is not null ? report.score ~ '/100' : 'report.not_evaluated'|trans }}</p>
                        <p><strong>{{ 'report.date_validation'|trans }}:</strong> {{ report.validationDate ? report.validationDate|date('d/m/Y') : 'report.not_validated'|trans }}</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>{{ 'report.creation'|trans }}:</strong> {{ report.createdAt ? report.createdAt|date('d/m/Y H:i') : '' }}</p>
                        <p><strong>{{ 'report.update'|trans }}:</strong> {{ report.updatedAt ? report.updatedAt|date('d/m/Y H:i') : '' }}</p>
                    </div>
                </div>
                
                <hr>
                <h5 class="font-weight-bold">{{ 'report.description'|trans }}</h5>
                <div class="report-content">
                    {{ report.description|nl2br }}
                </div>
                
                <hr>
                
                <div class="card shadow mb-4" id="ai-risk-card">
                    <div class="card-header py-3 bg-dark text-white d-flex justify-content-between align-items-center">
                        <h6 class="m-0 font-weight-bold text-danger"><i class="fas fa-microchip"></i> {{ 'ai.risk_management'|trans }}</h6>
                        <button class="btn btn-danger btn-sm pulse-button" id="btn-predict-risk" onclick="simulateRiskAnalysis()">
                            <i class="fas fa-brain mr-1"></i> {{ 'ai.run_prediction'|trans }}
                        </button>
                    </div>
                    <div class="card-body" id="risk-analysis-placeholder">
                        <div class="text-center py-4">
                            <i class="fas fa-shield-alt fa-3x text-light mb-2"></i>
                            <p class="text-muted small">{{ 'ai.risk_pending'|trans }}</p>
                        </div>
                    </div>
                    <div class="card-body" id="risk-analysis-content" style="display: none;">
                        {% set risk_score = 100 - (report.score|default(0)) %}
                        {% set risk_level = 'Low' %}
                        {% set risk_color = 'success' %}
                        
                        {% if risk_score > 80 or report.priority == 'Forte' %}
                            {% set risk_level = 'Critical' %}
                            {% set risk_color = 'danger' %}
                        {% elseif risk_score > 50 or report.priority == 'Moyenne' %}
                            {% set risk_level = 'Elevated' %}
                            {% set risk_color = 'warning' %}
                        {% elseif risk_score > 20 %}
                            {% set risk_level = 'Moderate' %}
                            {% set risk_color = 'info' %}
                        {% endif %}

                        <div class="row align-items-center animate__animated animate__fadeIn">
                            <div class="col-md-4 text-center">
                                <div class="h2 font-weight-bold text-{{ risk_color }} mb-0">{{ risk_level }}</div>
                                <div class="text-uppercase small font-weight-bold text-muted">{{ 'ai.risk_assessment'|trans }}</div>
                            </div>
                            <div class="col-md-8">
                                <div class="d-flex justify-content-between mb-1">
                                    <span class="font-weight-bold small text-dark">{{ 'ai.risk_index'|trans }}</span>
                                    <span class="font-weight-bold small text-{{ risk_color }}">{{ risk_score }}%</span>
                                </div>
                                <div class="progress mb-2" style="height: 12px; border-radius: 10px;">
                                    <div class="progress-bar bg-{{ risk_color }} progress-bar-striped progress-bar-animated" role="progressbar" style="width: {{ risk_score }}%"></div>
                                </div>
                                <p class="small text-muted mb-0">
                                    <i class="fas fa-info-circle"></i> {{ 'ai.failure_probability'|trans }}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <style>
                    .pulse-button {
                        animation: pulse-red 2s infinite;
                        box-shadow: 0 0 0 0 rgba(231, 74, 59, 0.7);
                    }
                    @keyframes pulse-red {
                        0% { transform: scale(0.95); box-shadow: 0 0 0 0 rgba(231, 74, 59, 0.7); }
                        70% { transform: scale(1); box-shadow: 0 0 0 10px rgba(231, 74, 59, 0); }
                        100% { transform: scale(0.95); box-shadow: 0 0 0 0 rgba(231, 74, 59, 0); }
                    }
                </style>

                <script>
                    function simulateRiskAnalysis() {
                        const btn = document.getElementById('btn-predict-risk');
                        const placeholder = document.getElementById('risk-analysis-placeholder');
                        const content = document.getElementById('risk-analysis-content');
                        
                        btn.disabled = true;
                        btn.classList.remove('pulse-button');
                        btn.innerHTML = '<i class="fas fa-sync-alt fa-spin mr-1"></i> {{ 'ai.analyzing'|trans }}';
                        
                        placeholder.innerHTML = `
                            <div class="text-center py-4">
                                <div class="spinner-grow text-danger mb-3" role="status"></div>
                                <p class="text-danger font-weight-bold mb-0">{{ 'ai.processing'|trans }} #{{ report.id }}...</p>
                                <small class="text-muted">Evaluating score {{ report.score }} and priority {{ report.priority }}</small>
                            </div>
                        `;
                        
                        setTimeout(() => {
                            placeholder.style.display = 'none';
                            content.style.display = 'block';
                            btn.innerHTML = '<i class="fas fa-check-circle mr-1"></i> {{ 'ai.analysis_ready'|trans }}';
                            btn.classList.replace('btn-danger', 'btn-success');
                        }, 2000);
                    }
                </script>

                <hr>
                <div class="card shadow mb-4 border-bottom-success" id="what-if-admin">
                    <div class="card-header py-3 bg-white">
                        <h6 class="m-0 font-weight-bold text-success"><i class="fas fa-chart-line mr-2"></i>Simulateur d'Audit "What If"</h6>
                    </div>
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <div class="h5 mb-0 font-weight-bold text-gray-800">Score de Simulation: <span id="admin-sim-score" class="text-success">{{ report.score|default(0) }}</span>%</div>
                            </div>
                            <div class="col">
                                <div class="progress progress-sm mr-2" style="height: 15px;">
                                    <div id="admin-sim-progress-base" class="progress-bar bg-primary" role="progressbar" style="width: {{ report.score|default(0) }}%"></div>
                                    <div id="admin-sim-progress-gain" class="progress-bar bg-success progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">{{ 'recommendations.ai'|trans }}</h6>
                    </div>
                    <div class="card-body">
                        {% if report.recommendations|length > 0 %}
                            <div class="alert alert-info">
                                <i class="fas fa-robot"></i> <strong>{{ 'recommendations.history'|trans }} :</strong>
                                <ul class="mt-2 mb-0 pl-3">
                                    {% for recommendation in report.recommendations %}
                                        <li class="mb-3 border-bottom pb-2 ajax-delete-item d-flex justify-content-between align-items-start">
                                            <div class="custom-control custom-checkbox mt-2 mr-3">
                                                <input type="checkbox" class="custom-control-input admin-rec-checkbox" 
                                                       id="admin-rec-{{ recommendation.id }}" 
                                                       data-impact="{{ recommendation.potentialImpact|default(10) }}"
                                                       onclick="updateAdminSimulation()">
                                                <label class="custom-control-label" for="admin-rec-{{ recommendation.id }}"></label>
                                            </div>
                                            <div class="flex-grow-1">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div>
                                                        <small class="text-muted font-weight-bold">{{ recommendation.createdAt|date('d/m/Y H:i') }}</small>
                                                        <span class="badge badge-success ml-2">+{{ recommendation.potentialImpact|default(10) }} pts</span>
                                                        <p class="mb-2 text-dark" style="font-size: 1.05rem;">{{ recommendation.content|raw|nl2br }}</p>
                                                    </div>
                                                    <form method="post" action="{{ path('app_recommendation_delete', {'id': recommendation.id}) }}" class="ajax-delete-form" data-confirm="{{ 'recommendations.confirm_delete'|trans }}">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recommendation.id) }}">
                                                        <button class="btn btn-sm btn-outline-danger border-0" title="{{ 'btn.delete'|trans }}">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% else %}
                            <p class="text-muted">{{ 'recommendations.none'|trans }}</p>
                        {% endif %}

                        <form action="{{ path('app_report_recommend', {'id': report.id}) }}" method="post">
                            <button class="btn btn-primary">
                                <i class="fas fa-magic"></i> {{ 'recommendations.generate'|trans }}
                            </button>
                        </form>
                    </div>
                </div>

                <script>
                    function updateAdminSimulation() {
                        const baseScore = parseInt('{{ report.score|default(0) }}');
                        let impact = 0;
                        document.querySelectorAll('.admin-rec-checkbox:checked').forEach(cb => {
                            impact += parseInt(cb.dataset.impact);
                        });
                        const total = Math.min(100, baseScore + impact);
                        document.getElementById('admin-sim-score').innerText = total;
                        document.getElementById('admin-sim-progress-gain').style.width = (total - baseScore) + '%';
                    }
                </script>

                <hr>
                <a href="{{ path('app_report_index') }}" class="btn btn-secondary">{{ 'report.return_list'|trans }}</a>
                <a href="{{ path('app_report_history', {id: report.id}) }}" class="btn btn-info">
                    <i class="fas fa-history"></i> {{ 'report.history'|trans }}
                </a>
                <a href="{{ path('app_report_edit', {'id': report.id}) }}" class="btn btn-warning">{{ 'report.modify'|trans }}</a>
                <a href="{{ path('app_report_pdf', {'id': report.id}) }}" class="btn btn-danger">
                    <i class="fas fa-file-pdf"></i> {{ 'report.download_pdf'|trans }}
                </a>
                
                <div class="mt-3 d-inline-block">
                    {{ include('report/_delete_form.html.twig', {'redirect': path('app_report_index')}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
