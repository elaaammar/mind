{% extends 'base.html.twig' %}

{% block title %}Détails utilisateur - MindAudit{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-user me-2"></i>Détails de l'utilisateur</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i>Modifier
            </a>
            <a href="{{ path('app_utilisateur_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Retour
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0">Informations personnelles</h5>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <th width="200">ID</th>
                            <td>{{ utilisateur.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ utilisateur.nom }}</td>
                        </tr>
                        <tr>
                            <th>Prénom</th>
                            <td>{{ utilisateur.prenom }}</td>
                        </tr>
                        <tr>
                            <th>Nom complet</th>
                            <td><strong>{{ utilisateur.nomComplet }}</strong></td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>
                                <a href="mailto:{{ utilisateur.email }}">{{ utilisateur.email }}</a>
                            </td>
                        </tr>
                        <tr>
                            <th>Rôle</th>
                            <td>
                                {% if utilisateur.role %}
                                    <span class="badge bg-info">{{ utilisateur.role.nom }}</span>
                                {% else %}
                                    <span class="badge bg-secondary">Aucun rôle</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Statut</th>
                            <td>
                                {% if utilisateur.actif %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-danger">Inactif</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Date de création</th>
                            <td>{{ utilisateur.createdAt ? utilisateur.createdAt|date('d/m/Y à H:i') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        {% if utilisateur.role %}
        <div class="card mt-4">
            <div class="card-header bg-white">
                <h5 class="mb-0">Permissions du rôle</h5>
            </div>
            <div class="card-body">
                {% if utilisateur.role.permissions %}
                    <div class="row">
                        {% for permission in utilisateur.role.permissions %}
                            <div class="col-md-6 mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>{{ permission }}
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-muted mb-0">Aucune permission définie</p>
                {% endif %}
            </div>
        </div>
        {% endif %}
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0">Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Modifier
                    </a>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="fas fa-trash me-2"></i>Supprimer
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmation de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Êtes-vous sûr de vouloir supprimer l'utilisateur <strong>{{ utilisateur.nomComplet }}</strong> ?
                Cette action est irréversible.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                {{ include('utilisateur/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
