{% extends 'base_front.html.twig' %}

{% block title %}Manage Audits{% endblock %}

{% block body %}
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Manage Audits</h1>
        <a href="{{ path('app_front_audit_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Create New Audit
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Your Audits</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Status</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for audit in audits %}
                        <tr>
                            <td>{{ audit.id }}</td>
                            <td>{{ audit.title }}</td>
                            <td>
                                {% if audit.status == 'public' %}
                                    <span class="badge badge-success">Public</span>
                                {% elseif audit.status == 'draft' %}
                                    <span class="badge badge-secondary">Draft</span>
                                {% elseif audit.status == 'completed' %}
                                    <span class="badge badge-info">Completed</span>
                                {% else %}
                                    <span class="badge badge-warning">{{ audit.status }}</span>
                                {% endif %}
                            </td>
                            <td>{{ audit.createdAt ? audit.createdAt|date('Y-m-d H:i') : '' }}</td>
                            <td>
                                <a href="{{ path('app_front_audit_show', {'id': audit.id}) }}" class="btn btn-info btn-sm btn-icon-split mb-1">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-eye"></i>
                                    </span>
                                    <span class="text">View</span>
                                </a>
                                <a href="{{ path('app_front_audit_edit', {'id': audit.id}) }}" class="btn btn-warning btn-sm btn-icon-split mb-1">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-edit"></i>
                                    </span>
                                    <span class="text">Edit</span>
                                </a>
                                
                                {% if audit.status == 'draft' %}
                                <form method="post" action="{{ path('app_front_audit_make_public', {'id': audit.id}) }}" style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('make_public' ~ audit.id) }}">
                                    <button class="btn btn-success btn-sm btn-icon-split mb-1">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-globe"></i>
                                        </span>
                                        <span class="text">Make Public</span>
                                    </button>
                                </form>
                                {% elseif audit.status == 'public' %}
                                <form method="post" action="{{ path('app_front_audit_mark_completed', {'id': audit.id}) }}" style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('mark_completed' ~ audit.id) }}">
                                    <button class="btn btn-primary btn-sm btn-icon-split mb-1">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-check-circle"></i>
                                        </span>
                                        <span class="text">Mark Completed</span>
                                    </button>
                                </form>
                                {% endif %}
                                
                                <form method="post" action="{{ path('app_front_audit_delete', {'id': audit.id}) }}" style="display: inline-block;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ audit.id) }}">
                                    <button class="btn btn-danger btn-sm btn-icon-split mb-1">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-trash"></i>
                                        </span>
                                        <span class="text">Delete</span>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
