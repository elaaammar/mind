{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #6366f1;
            --primary-gradient: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
            --success-gradient: linear-gradient(135deg, #10b981 0%, #059669 100%);
            --danger-gradient: linear-gradient(135deg, #f43f5e 0%, #e11d48 100%);
            --info-gradient: linear-gradient(135deg, #0ea5e9 0%, #2563eb 100%);
            --glass: rgba(255, 255, 255, 0.7);
            --glass-border: rgba(255, 255, 255, 0.4);
            --card-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.07);
        }

        body {
            font-family: 'Outfit', sans-serif;
            background-color: #f8fafc;
        }

        .container-fluid {
            padding: 0 2rem 2rem 2rem;
        }

        /* Modern Typography */
        h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
            color: #1e293b;
            font-weight: 700;
        }

        /* Glassmorphism Cards */
        .card {
            background: var(--glass);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid var(--glass-border);
            border-radius: 1.25rem;
            box-shadow: var(--card-shadow);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px 0 rgba(31, 38, 135, 0.12);
        }

        /* Stats Cards */
        .stat-card {
            border: none;
            overflow: hidden;
            position: relative;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
        }

        .stat-card.bg-primary-light::before { background: var(--primary-gradient); }
        .stat-card.bg-success-light::before { background: var(--success-gradient); }
        .stat-card.bg-danger-light::before { background: var(--danger-gradient); }

        .stat-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            margin-bottom: 1rem;
        }

        .icon-primary { background: rgba(99, 102, 241, 0.1); color: #6366f1; }
        .icon-success { background: rgba(16, 185, 129, 0.1); color: #10b981; }
        .icon-danger { background: rgba(244, 63, 94, 0.1); color: #f43f5e; }

        /* Modern Buttons */
        .btn-modern {
            border-radius: 0.75rem;
            padding: 0.625rem 1.25rem;
            font-weight: 600;
            transition: all 0.2s ease;
            border: none;
        }

        .btn-primary-modern {
            background: var(--primary-gradient);
            color: white;
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
        }

        .btn-primary-modern:hover {
            box-shadow: 0 6px 20px rgba(99, 102, 241, 0.4);
            transform: scale(1.02);
            color: white;
        }

        /* Filter Section */
        .filter-section {
            background: white;
            border-radius: 1rem;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .form-control-modern {
            border-radius: 0.5rem;
            border: 1px solid #e2e8f0;
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
        }

        .form-control-modern:focus {
            border-color: #6366f1;
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
        }

        /* Charts Style */
        .chart-container {
            padding: 1.5rem;
        }

        .card-header {
            background: transparent;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            padding: 1.25rem 1.5rem;
        }

        /* Progress Bar */
        .progress {
            height: 8px;
            border-radius: 4px;
            background-color: #f1f5f9;
        }

        .progress-bar {
            border-radius: 4px;
        }
    </style>
{% endblock %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-3">
            <div>
                <h1 class="h2 mb-1">{{ 'dashboard.title'|trans }}</h1>
                <p class="text-muted">{{ 'dashboard.welcome'|trans }}</p>
            </div>
            <div class="d-flex gap-2">
                <a href="{{ path('app_user_report_index') }}" class="btn-modern btn btn-light shadow-sm me-2">
                    <i class="fas fa-list fa-sm me-2"></i> {{ 'btn.my_reports'|trans }}
                </a>
                <a href="{{ path('app_user_report_new') }}" class="btn-modern btn-primary-modern btn shadow-sm">
                    <i class="fas fa-plus fa-sm me-2"></i> {{ 'btn.new_audit'|trans }}
                </a>
            </div>
        </div>

        <!-- Filters Row -->
        <div class="card filter-section border-0 shadow-sm mb-3">
            <div class="card-body p-0">
                <form id="filter-form" class="row align-items-end g-3">
                    <div class="col-md-3">
                        <label class="form-label small fw-bold text-uppercase text-muted">{{ 'filter.type'|trans }}</label>
                        <select name="type" class="form-select form-control-modern filter-input">
                            <option value="">{{ 'filter.all_types'|trans }}</option>
                            {% for t in availableTypes %}
                                <option value="{{ t }}">{{ t }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small fw-bold text-uppercase text-muted">{{ 'filter.status'|trans }}</label>
                        <select name="status" class="form-select form-control-modern filter-input">
                            <option value="">{{ 'filter.all_statuses'|trans }}</option>
                            {% for s in availableStatuses %}
                                <option value="{{ s }}">{{ s }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small fw-bold text-uppercase text-muted">{{ 'filter.priority'|trans }}</label>
                        <select name="priority" class="form-select form-control-modern filter-input">
                            <option value="">{{ 'filter.all_priorities'|trans }}</option>
                            <option value="Faible">{{ 'filter.low'|trans }}</option>
                            <option value="Moyenne">{{ 'filter.medium'|trans }}</option>
                            <option value="Forte">{{ 'filter.high'|trans }}</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button type="reset" id="reset-filters" class="btn btn-modern btn-outline-secondary w-100">
                            <i class="fas fa-undo fa-sm me-2"></i> {{ 'btn.reset'|trans }}
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Content Row -->
        <div class="row g-4 mb-5">

            <!-- Total Reports Card -->
            <div class="col-xl-4 col-md-6">
                <div class="card stat-card bg-primary-light h-100 border-0">
                    <div class="card-body p-4">
                        <div class="stat-icon icon-primary">
                            <i class="fas fa-file-invoice"></i>
                        </div>
                        <div class="text-uppercase small fw-bold text-muted mb-1">{{ 'dashboard.total_audits'|trans }}</div>
                        <div class="h2 mb-0 fw-bold">{{ totalReports }}</div>
                        <div class="mt-2 small text-muted">
                            <span class="text-success fw-bold"><i class="fas fa-arrow-up"></i> +{{ (totalReports * 0.1)|round }}</span> {{ 'dashboard.month_increase'|trans }}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Global Score Average Card -->
            <div class="col-xl-4 col-md-6">
                <div class="card stat-card bg-success-light h-100 border-0">
                    <div class="card-body p-4">
                        <div class="stat-icon icon-success">
                            <i class="fas fa-chart-pie"></i>
                        </div>
                        <div class="text-uppercase small fw-bold text-muted mb-1">{{ 'dashboard.perf_score'|trans }}</div>
                        <div class="h2 mb-0 fw-bold text-success">{{ avgScore }}%</div>
                        <div class="mt-3">
                            <div class="progress">
                                <div class="progress-bar bg-success" role="progressbar" style="width: {{ avgScore }}%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Critical Reports Card -->
            <div class="col-xl-4 col-md-6">
                <div class="card stat-card bg-danger-light h-100 border-0">
                    <div class="card-body p-4">
                        <div class="stat-icon icon-danger">
                            <i class="fas fa-exclamation-circle"></i>
                        </div>
                        <div class="text-uppercase small fw-bold text-muted mb-1">{{ 'dashboard.critical_points'|trans }}</div>
                        <div class="h2 mb-0 fw-bold text-danger">{{ criticalCount }}</div>
                        {% set percentCritical = (totalReports > 0) ? (criticalCount / totalReports * 100) : 0 %}
                        <div class="mt-3">
                            <div class="d-flex justify-content-between mb-1 small text-muted">
                                <span>{{ 'dashboard.alert_rate'|trans }}</span>
                                <span>{{ percentCritical|round }}%</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-danger" role="progressbar" style="width: {{ percentCritical }}%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- Charts Row -->
        <div class="row g-4">

            <!-- Area Chart: Evolution Performance -->
            <div class="col-xl-8">
                <div class="card border-0 h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0 fw-bold text-uppercase small text-muted">{{ 'dashboard.compliance_trend'|trans }}</h6>
                        <div class="dropdown no-arrow">
                            <a class="dropdown-toggle text-muted" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                            </a>
                        </div>
                    </div>
                    <div class="card-body chart-container">
                        <div style="height: 350px;">
                            <canvas id="performanceScoreChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pie Chart: RÃ©partition Statuts -->
            <div class="col-xl-4">
                <div class="card border-0 h-100">
                    <div class="card-header">
                        <h6 class="mb-0 fw-bold text-uppercase small text-muted">{{ 'dashboard.process_states'|trans }}</h6>
                    </div>
                    <div class="card-body chart-container">
                        <div style="height: 300px;">
                            <canvas id="statusPieChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bar Chart: Reports by Type -->
            <div class="col-12">
                <div class="card border-0">
                    <div class="card-header">
                        <h6 class="mb-0 fw-bold text-uppercase small text-muted">{{ 'dashboard.industry_analysis'|trans }}</h6>
                    </div>
                    <div class="card-body chart-container">
                        <div style="height: 300px;">
                            <canvas id="reportTypeChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Page level plugins -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Modern Chart.js Config
        const chartFont = {
            family: "'Outfit', sans-serif",
            size: 12,
            color: '#64748b'
        };

        let charts = {};

        function initCharts(data) {
            Chart.defaults.font = chartFont;
            Chart.defaults.color = '#64748b';

            // 1. Status Pie Chart
            const ctxStatus = document.getElementById("statusPieChart");
            charts.status = new Chart(ctxStatus, {
                type: 'doughnut',
                data: {
                    labels: data.reportsByStatus.map(s => s.status),
                    datasets: [{
                        data: data.reportsByStatus.map(s => s.count),
                        backgroundColor: ['#6366f1', '#10b981', '#f43f5e', '#f59e0b', '#0ea5e9'],
                        borderWidth: 0,
                        hoverOffset: 20
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom', labels: { usePointStyle: true, padding: 20 } },
                        tooltip: { padding: 12, cornerRadius: 12 }
                    },
                    cutout: '75%',
                },
            });

            // 2. Report Type Chart
            const ctxType = document.getElementById("reportTypeChart");
            charts.type = new Chart(ctxType, {
                type: 'bar',
                data: {
                    labels: data.reportsByType.map(t => t.type),
                    datasets: [{
                        label: "Nombre d'audits",
                        backgroundColor: '#6366f1',
                        borderRadius: 8,
                        data: data.reportsByType.map(t => t.count),
                    }],
                },
                options: { 
                    maintainAspectRatio: false, 
                    plugins: { legend: { display: false } },
                    scales: { 
                        y: { beginAtZero: true, grid: { display: true, drawBorder: false, color: '#f1f5f9' } },
                        x: { grid: { display: false } }
                    } 
                }
            });

            // 3. Performance Curve
            const ctxScores = document.getElementById("performanceScoreChart");
            const gradient = ctxScores.getContext('2d').createLinearGradient(0, 0, 0, 400);
            gradient.addColorStop(0, 'rgba(99, 102, 241, 0.2)');
            gradient.addColorStop(1, 'rgba(99, 102, 241, 0)');

            charts.scores = new Chart(ctxScores, {
                type: 'line',
                data: {
                    labels: data.scoresByMonth.map(m => m.month),
                    datasets: [{
                        label: "Score Moyen (%)",
                        fill: true,
                        backgroundColor: gradient,
                        borderColor: "#6366f1",
                        borderWidth: 3,
                        pointRadius: 5,
                        pointBackgroundColor: "#fff",
                        pointBorderColor: "#6366f1",
                        pointBorderWidth: 2,
                        tension: 0.4,
                        data: data.scoresByMonth.map(m => m.avg_score),
                    }],
                },
                options: { 
                    maintainAspectRatio: false, 
                    plugins: { legend: { display: false } },
                    scales: { 
                        y: { beginAtZero: true, max: 100, grid: { color: '#f1f5f9' } },
                        x: { grid: { display: false } }
                    } 
                }
            });
        }

        function updateUI(data) {
            // Update Cards
            document.querySelector('.stat-card.bg-primary-light .h2').textContent = data.totalReports;
            document.querySelector('.stat-card.bg-success-light .h2').textContent = data.avgScore + '%';
            document.querySelector('.stat-card.bg-danger-light .h2').textContent = data.criticalCount;

            const percentCritical = (data.totalReports > 0) ? (data.criticalCount / data.totalReports * 100) : 0;
            document.querySelector('.stat-card.bg-success-light .progress-bar').style.width = data.avgScore + '%';
            document.querySelector('.stat-card.bg-danger-light .progress-bar').style.width = percentCritical + '%';

            // Update Charts
            charts.status.data.labels = data.reportsByStatus.map(s => s.status);
            charts.status.data.datasets[0].data = data.reportsByStatus.map(s => s.count);
            charts.status.update();

            charts.type.data.labels = data.reportsByType.map(t => t.type);
            charts.type.data.datasets[0].data = data.reportsByType.map(t => t.count);
            charts.type.update();

            charts.scores.data.labels = data.scoresByMonth.map(m => m.month);
            charts.scores.data.datasets[0].data = data.scoresByMonth.map(m => m.avg_score);
            charts.scores.update();
        }

        let initialData = {
            reportsByStatus: [{% for s in reportsByStatus %}{status: "{{ s.status }}", count: {{ s.count }}},{% endfor %}],
            reportsByType: [{% for t in reportsByType %}{type: "{{ t.type }}", count: {{ t.count }}},{% endfor %}],
            scoresByMonth: [{% for m in scoresByMonth %}{month: "{{ m.month }}", avg_score: {{ m.avg_score }}},{% endfor %}],
            criticalCount: {{ criticalCount }},
            totalReports: {{ totalReports }},
            avgScore: {{ avgScore }}
        };

        document.addEventListener('DOMContentLoaded', function() {
            initCharts(initialData);

            const filterInputs = document.querySelectorAll('.filter-input');
            const filterForm = document.getElementById('filter-form');

            const refreshStats = () => {
                const params = new URLSearchParams(new FormData(filterForm));
                fetch('{{ path('app_user_dashboard_stats') }}?' + params.toString())
                    .then(response => response.json())
                    .then(data => updateUI(data))
                    .catch(error => console.error('Error fetching stats:', error));
            };

            filterInputs.forEach(input => {
                input.addEventListener('change', refreshStats);
            });

            document.getElementById('reset-filters').addEventListener('click', () => {
                setTimeout(refreshStats, 10);
            });
        });
    </script>
{% endblock %}